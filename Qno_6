n = int(input("Enter the number of terms in the Fibonacci series: "))

# Define two variables to store the previous and current values of the Fibonacci sequence
prev = 0
curr = 1

# Use a for loop to iterate through the desired number of terms in the Fibonacci series
for i in range(1, n+1):
# Calculate the next value in the Fibonacci sequence based on the previous two values
 curr = prev + curr

# Print the current value as part of the Fibonacci series
print(f"{i}: {curr}")

# Update the previous value to be the current value
prev = curr

# Print the final result (the last value in the Fibonacci series)
print(f"{n+1}: {curr}")